<div class="max-w-md mx-auto mt-10 bg-white p-6 rounded-xl shadow">
  <h1 class="font-bold text-3xl mb-4">Add New Album</h1>
  <%= form_with(model: @album, local: true, html: { multipart: true }) do |f| %>
    <div class="mb-4">
      <%= f.label :title, "Album Title", class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.text_field :title, class: "w-full border rounded px-3 py-2" %>
    </div>
    <div class="mb-4">
      <%= f.label :description, "Description", class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.text_area :description, rows: 3, class: "w-full border rounded px-3 py-2" %>
    </div>
    <div class="mb-4">
      <%= f.label :photos, "Photos", class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.file_field :photos, multiple: true, class: "w-full border rounded px-3 py-2 bg-white" %>
    </div>
    <%= f.submit "Create Album", class: "bg-violet-700 text-white px-4 py-2 rounded hover:bg-violet-800 transition" %>
  <% end %>
</div>
