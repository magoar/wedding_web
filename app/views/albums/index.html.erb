<div class="px-18 py-6">
  <div class="flex items-center justify-between mb-4">
    <h1 class="text-2xl font-bold">Photo Gallery</h1>
    <%= link_to "Add New Album", new_album_path, class: "bg-violet-700 text-white px-4 py-2 rounded shadow hover:bg-violet-800 transition" %>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <% @albums.each do |album| %>
      <div class="bg-white rounded shadow p-4">
        <p class="text-violet-700 font-semibold hover:underline" ><%= album.title %></p>
        <p class="text-gray-600 mt-2"><%= album.description %></p>
        <% if album.photos.attached? %>
          <% album.photos.each do |photo| %>
            <%= image_tag photo, class: "rounded shadow" %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
