<%= render "shared/navbar-gray" %>

<div class="px-4 py-6 max-w-4xl mx-auto">

  <div class="space-y-6">

    <% if @albums.any? %>
    <% @albums.each do |album| %>
      <div class="bg-white shadow p-4 border border-black/80 relative" x-data="{ open: false }">
        <!-- Título, descripción y botón desplegable -->
        <div class="flex justify-between items-center">
          <div>
            <p class="text-black-700 text-xl font-semibold"><%= album.title %></p>
            <p class="text-gray-500 text-sm mt-1"><%= album.description %></p>
          </div>
          <% more_count = [album.photos.count - 2, 0].max %>
          <button
            @click="open = !open"
            :aria-expanded="open"
            class="flex items-center gap-2 text-sm text-green-900 hover:text-green-900 transition px-3 py-1 rounded"
          >
            <svg class="w-5 h-5 transform transition-transform" :class="{'rotate-180': open}" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>

            <span x-cloak x-show="!open">More<% if more_count > 0 %> <span class="text-gray-500">(+<%= more_count %>)</span><% end %></span>
            <span x-cloak x-show="open">Less</span>
          </button>
          </div>

        <!-- Vista previa de las primeras fotos -->
        <% if album.photos.attached? %>
          <div class="grid grid-cols-2 sm:grid-cols-3 gap-4 mt-4">
            <% album.photos.first(2).each do |attachment| %>
              <div class="relative group">

                <% if attachment.content_type.start_with?("image/") %>
                  <%= image_tag attachment, class: "w-full h-64 object-cover rounded shadow cursor-pointer", data: { action: "click->photo#open", url: url_for(attachment) } %>
                <% elsif attachment.content_type.start_with?("video/") %>
                  <video class="w-full h-64 object-cover rounded shadow cursor-pointer" controls>
                    <source src="<%= url_for(attachment) %>" type="<%= attachment.content_type %>">
                  </video>
                <% end %>

                <div class="absolute top-2 right-2 flex items-center gap-2">
                  <!-- mobile: visible (sm:hidden) -->
                  <%= link_to url_for(attachment), download: true, class: "sm:hidden bg-white p-2 rounded-full shadow hover:bg-gray-100", title: "Download" do %>
                    <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v12m0 0l-4-4m4 4l4-4M4 20h16" />
                    </svg>
                  <% end %>

                  <!-- desktop: hidden by default, appear on group-hover (hidden on small screens) -->
                  <div class="hidden sm:flex group-hover:flex">
                    <%= link_to url_for(attachment), download: true, class: "bg-white p-2 rounded-full shadow hover:bg-gray-100", title: "Download" do %>
                      <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v12m0 0l-4-4m4 4l4-4M4 20h16" />
                      </svg>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

          <!-- Sección desplegable: fotos restantes -->
          <div x-show="open" x-transition class="mt-4">
            <% remaining_photos = album.photos.drop(2) %>
            <% if remaining_photos.any? %>
              <div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
                <% remaining_photos.each do |attachment| %>
                  <div class="relative group">
                    <% if attachment.content_type.start_with?("image/") %>
                      <%= image_tag attachment, class: "w-full h-64 object-cover rounded shadow cursor-pointer", data: { action: "click->photo#open", url: url_for(attachment) } %>
                    <% elsif attachment.content_type.start_with?("video/") %>
                      <video class="w-full h-64 object-cover rounded shadow cursor-pointer" controls>
                        <source src="<%= url_for(attachment) %>" type="<%= attachment.content_type %>">
                      </video>
                    <% end %>
                    <div class="absolute top-2 right-2 flex items-center gap-2">
                      <!-- mobile: visible (sm:hidden) -->
                      <%= link_to url_for(attachment), download: true, class: "sm:hidden bg-white p-2 rounded-full shadow hover:bg-gray-100", title: "Download" do %>
                        <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v12m0 0l-4-4m4 4l4-4M4 20h16" />
                        </svg>
                      <% end %>

                      <!-- desktop: hidden by default, appear on group-hover (hidden on small screens) -->
                      <div class="hidden sm:flex group-hover:flex">
                        <%= link_to url_for(attachment), download: true, class: "bg-white p-2 rounded-full shadow hover:bg-gray-100", title: "Download" do %>
                          <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v12m0 0l-4-4m4 4l4-4M4 20h16" />
                          </svg>
                        <% end %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-sm text-gray-400 italic">No more photos in this album.</p>
            <% end %>
          </div>

          <!-- BOTÓN SIEMPRE VISIBLE en la misma posición -->
          <div class="mt-3 flex justify-end">
            <%= link_to download_album_path(album),
                        data: { turbo: false },
                        class: "inline-flex items-center gap-2 text-green-900 border border-green-700 font-thin text-sm px-3 py-1 sm:px-8 sm:py-4 hover:bg-green-700 hover:text-white transition whitespace-nowrap" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v12m0 0l-4-4m4 4l4-4M4 20h16" />
              </svg>
              Download Album
            <% end %>
          </div>

        <% else %>
          <p class="text-gray-400 mt-5 italic">No photos uploaded yet.</p>
        <% end %>
      </div>
    <% end %>
    <% else %>
      <p class="text-gray-500 italic">No albums uploaded yet.</p>
    <% end %>
  </div>
</div>
